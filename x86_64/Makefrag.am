# file: x86_64/Makefrag.am
#
#   This file is included by Makefrag.am and appends any x86_64 specific
# sources onto libkernel_a_SOURCES. This is also where we need to add
# flags to machulus_LINKFLAGS to let the linker know about our linker
# script.

if BITS32

  AM_CFLAGS += -m32
  AM_CCASFLAGS += -m32
  machulus_LINKFLAGS += -melf_i386

  libkernel_a_SOURCES +=\
    i386/boot.S

else

  AM_CFLAGS += -mcmodel=kernel -mno-red-zone
  machulus_LINKFLAGS += -n

  libkernel_a_SOURCES +=\
    x86_64/boot.S \
    x86_64/early-idt.S

endif

libkernel_a_SOURCES +=\
    x86_64/framebuffer.h \
    x86_64/framebuffer.c \
    x86_64/stdout.c

machulus_LINKFLAGS +=\
    -T x86_64/ldscript

BUILT_SOURCES = x86_64/ldscript
CLEANFILES += x86_64/ldscript

x86_64/ldscript: x86_64/ldscript.S
	$(CPP) $(AM_CPPFLAGS) -P -o $@ $<
